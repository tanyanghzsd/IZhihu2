<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.ty.izhihu"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/load_iv"
        android:src="@drawable/no_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="#1C86EE"
        app:pstsIndicatorHeight="2dp"
        app:pstsShouldExpand="true"
        app:pstsTabPaddingLeftRight="2dp"
        app:pstsUnderlineColor="@android:color/white"
        app:pstsUnderlineHeight="1dp"
        app:selectedTabTextColor="#1C86EE"
        tools:ignore="NewApi" />
    
    

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>