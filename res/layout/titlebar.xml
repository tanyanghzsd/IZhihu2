<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    >
    
    <Button 
        android:id="@+id/titlebar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/userinfo_navigationbar_back"
        
        />
    
    <TextView 
        android:id="@+id/titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="知乎日报"
        />
    
    <Button 
        android:id="@+id/titlebar_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fav_normal"
        android:layout_toLeftOf="@+id/titlebar_share"
        />
    
    <Button 
        android:id="@+id/titlebar_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radar_card_share"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
